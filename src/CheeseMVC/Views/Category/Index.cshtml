@model List<CheeseMVC.Models.CheeseCategory>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>



@if (Model.Count == 0)
{
    <p>
        We have not categories yet
    </p>
}
<!-- Can I use the word cheese?  What happens if I change it to category?-->
